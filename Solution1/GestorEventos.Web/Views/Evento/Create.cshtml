@model GestorEventos.Web.Models.EventoViewModel
<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Crear Evento</h5>
    </div>
    <div class="card-body text-center">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label>Nombre del Evento</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del evento">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Total de Participantes</label>
                    <input asp-for="TotalParticipante" type="number" class="form-control" placeholder="Cantidad de participantes">
                    <span asp-validation-for="TotalParticipante" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Fecha y Hora</label>
                    <input asp-for="FechaHora" type="datetime-local" class="form-control">
                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>ID de la Sala</label>
                    <input asp-for="SalaId" type="number" class="form-control" placeholder="Ingrese el ID de la sala">
                    <span asp-validation-for="SalaId" class="text-danger"></span>
                </div>

                <div class="card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
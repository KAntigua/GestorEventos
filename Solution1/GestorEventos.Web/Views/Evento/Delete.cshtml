@model GestorEventos.Web.Models.EventoViewModel

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Eliminar Evento</h5>
    </div>
    <div class="card-body">
        <p class="text-danger">¿Estás seguro de que deseas eliminar este evento?</p>
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.TotalParticipante)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalParticipante)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.FechaHora)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaHora)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.SalaId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalaId)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este evento?');">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger btn-sm" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancelar</a>
        </form>
    </div>
</div>
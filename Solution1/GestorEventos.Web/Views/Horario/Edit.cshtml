@model GestorEventos.Web.Models.HorarioViewModel

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Editar Horario</h5>
    </div>
    <div class="card-body text-primary">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    
                    <input type="hidden" asp-for="Id" />

                   
                    <div class="form-group">
                        <label asp-for="FechaHoraInicio" class="control-label">Fecha y Hora de Inicio</label>
                        <input asp-for="FechaHoraInicio" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaHoraInicio" class="text-danger"></span>
                    </div>

                   
                    <div class="form-group">
                        <label asp-for="FechaHoraFin" class="control-label">Fecha y Hora de Fin</label>
                        <input asp-for="FechaHoraFin" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaHoraFin" class="text-danger"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="SalaId" class="control-label">Sala (ID)</label>
                        <input asp-for="SalaId" class="form-control" placeholder="Ingrese el ID de la Sala" />
                        <span asp-validation-for="SalaId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="EventoId" class="control-label">Evento (ID)</label>
                        <input asp-for="EventoId" class="form-control" placeholder="Ingrese el ID del Evento" />
                        <span asp-validation-for="EventoId" class="text-danger"></span>
                    </div>

                    <div class="card-footer text-center">
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                            <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


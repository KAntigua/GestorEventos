@model GestorEventos.Web.Models.UsuarioViewModel

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Crear Usuario</h5>
    </div>
    <div class="card-body text-center">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Nombre</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del usuario">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Correo</label>
                    <input asp-for="Correo" class="form-control" placeholder="Correo del usuario">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" placeholder="Contraseña">
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Rol</label>
                    <input asp-for="Rol" class="form-control" placeholder="Rol del usuario">
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
                <div class="card-footer text-center">
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la Lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
